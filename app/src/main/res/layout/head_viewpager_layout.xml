<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_image_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            fresco:placeholderImage="@drawable/about_bg"
            fresco:roundedCornerRadius="5dp"
            />
        <TextView
            android:id="@+id/head_image_title_1"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left|bottom"
            android:paddingBottom="40dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="标题"/>
        <TextView
            android:id="@+id/head_image_cont_1"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingBottom="20dp"
            android:text="内容"/>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:paddingTop="5dp"
            android:id="@+id/head_image_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            fresco:placeholderImage="@drawable/about_bg"
            fresco:roundedCornerRadius="5dp"
            />
        <TextView
            android:id="@+id/head_image_title_2"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left|bottom"
            android:paddingBottom="40dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="标题"/>
        <TextView
            android:id="@+id/head_image_cont_2"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingBottom="20dp"
            android:text="内容"/>


    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:paddingTop="5dp"
            android:id="@+id/head_image_3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            fresco:placeholderImage="@drawable/about_bg"

            />
        <TextView
            android:id="@+id/head_image_title_3"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left|bottom"
            android:paddingBottom="40dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="标题"/>
        <TextView
            android:id="@+id/head_image_cont_3"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingBottom="20dp"
            android:text="内容"/>


    </FrameLayout>
    <TextView
        android:id="@+id/head_title"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="标题"/>
    <TextView
        android:id="@+id/head_cont"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="内容"/>

</LinearLayout>